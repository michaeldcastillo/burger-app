<!-- =========================================== -->

    <div class="row">

    <div class="column-left">
        <h2 id="title-left">Burger Menu</h2>
        <ul>
            {{#each burgers}}
                {{#unless devoured}}                
                    <p><button class="change-devour" data-id="{{id}}" data-newdevour="true">Devour It!</button> {{burger_name}}</p>
                <!-- <p>Devoured?: {{devoured}}</p> -->   
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="column-right">
        <h2 id="title-right">Burgers Consumed</h2>
        <ul>
            {{#each burgers}}
                {{#if devoured}}
                   <span style="white-space: nowrap;"><img id="emoji" src="assets/img/yum-60x60.png">&nbsp;<p id="consumed">{{burger_name}}</p></span>
                <!--  <p>Devoured?: {{devoured}}</p> -->
                {{/if}}
            {{/each}}        
        </ul>
    </div>

    </div>



   

</div>

