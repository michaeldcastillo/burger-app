            {{#each burgers}}
                {{#unless devoured}}                
                    <p><button class="change-devour" data-id="{{id}}" data-newdevour="true">Devour It!</button> {{burger_name}}</p>
                <!-- <p>Devoured?: {{devoured}}</p> -->   
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="column">
        <h2>Burgers You've Consumed</h2>
    <!-- <p>Some text..</p> -->
        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    <p>{{burger_name}}</p>
                <!--  <p>Devoured?: {{devoured}}</p> -->
                {{/if}}
            {{/each}}        
        </ul>
    </div>

