        <h2 id="title-create">Create Your Own Burger</h2>

        <form class="create-form">

        <div class="form-group">
        <!-- <label for="burg">Custom Burger:</label> -->
            <input type="text" id="burg" name="name" placeholder="Type your favorite burger here...">
        </div>

